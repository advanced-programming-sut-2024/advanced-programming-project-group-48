<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.menu.controller.PreGameController">
   <Pane prefHeight="200.0" prefWidth="0.0">
      <ImageView fitHeight="400.0" fitWidth="600.0" opacity="0.38">
         <Image url="@../images/BackGrounds/backGround.jpg" />
      </ImageView>
      <Text fill="#3832cf" fontSmoothingType="LCD" layoutX="39.0" layoutY="84.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome to PreGame Menu">
         <font>
            <Font name="B Sara" size="47.0" />
         </font>
      </Text>
      <Button layoutX="223.0" layoutY="119.0" mnemonicParsing="false" onMouseClicked="#createNewGame" text="Create new game" textFill="#2509ff">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Button>
      <Button layoutX="217.0" layoutY="181.0" mnemonicParsing="false" onMouseClicked="#ArrangeDeckCards" text="Arrange deck cards" textFill="#3e17dc">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Button>
      <Button layoutX="163.0" layoutY="313.0" mnemonicParsing="false" onMouseClicked="#goToMainMenu" text="go to main menu" textFill="#e41a1a">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Button layoutX="237.0" layoutY="228.0" mnemonicParsing="false" onMouseClicked="#goToWaitingRoom" text="Go to waiting room" />
      <Label fx:id="ErrorText" alignment="CENTER" layoutX="167.0" layoutY="339.0" text="..............................................................................................." />
      <Button layoutX="283.0" layoutY="313.0" mnemonicParsing="false" onMouseClicked="#showOnlineFriends" text="play directly with your friends" />
      <Button layoutX="252.0" layoutY="270.0" mnemonicParsing="false" onMouseClicked="#makePublicOrPrivate" text="public/private" />
   </Pane>
</AnchorPane>
